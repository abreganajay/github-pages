from PIL import Image
import requests
import streamlit as st 
from streamlit_lottie import st_lottie

# TAB NAME AND ICON 
st.set_page_config(page_title="Abregana's Biography",
page_icon=":volleyball:", layout="wide") 

# LOTTIE ANIMATION
def load_lottieurl(url):
  r = requests.get(url)
  if r.status_code != 200:
      return None
  return r.json()

lottie_coding = "https://lottie.host/a774dec5-3fa5-431f-bbd8-
603d9fa00ba8/CWRR2wpWn3.json"

lottie_life =
"https://lottie.host/c5fd277b-2ea1-4342-92cc-1a3bf22dbb33/iUKNfVzyjg.json"

# IMAGE UPLOAD
img_achievement = Image.open("blog/image/image.png")

# INTRODUCTION
with st.container():
  st.write("---")
  leftColumn, rightColumn = st.columns(2)

with leftColumn:
  st.subheader("Hi, I am Jayrald
  st.title("A BSCpE student
  st.write("I am a first-year student at Surigao del Norte State University ðŸ™‡ ðŸ™‡ ") 
  st.write("[My FB profile>](https://www.facebook.com/jayrald.abregana.7?mibextid=ZbWKwL)")

with rightColumn:st_lottie(lottie_coding, height=300, key="coding")

# MY LIFE 
